<?xml version="1.0" encoding="utf-8"?><!-- Item which displays time the bus stops and time left -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:clickable="true"
    android:orientation="horizontal"
    android:padding="8dp"
    tools:layout_width="match_parent">

    <TextView
        android:id="@+id/tvStopTimeColumn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:gravity="start"
        android:lineSpacingExtra="8sp"
        android:textSize="16sp"
        tools:text="12:00\n13:00\n14:00" />

    <View
        android:layout_width="8dp"
        android:layout_height="match_parent"
        tools:layout_weight="1" />

    <TextView
        android:id="@+id/tvTimeLeftColumn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:gravity="end"
        android:lineSpacingExtra="8sp"
        android:textSize="16sp"
        tools:text="100mins left\n200mins left\n300mins left" />
</LinearLayout>